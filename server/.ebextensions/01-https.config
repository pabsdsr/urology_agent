option_settings:
  # Environment variables for production
  aws:elasticbeanstalk:application:environment:
    ENVIRONMENT: production
    
  # Security settings
  aws:elasticbeanstalk:environment:
    ServiceRole: aws-elasticbeanstalk-service-role
    
  # Instance profile for Bedrock access
  aws:autoscaling:launchconfiguration:
    IamInstanceProfile: aws-elasticbeanstalk-ec2-role

# Note: SSL/HTTPS is automatically handled by Elastic Beanstalk for .elasticbeanstalk.com domains
# If you add a custom domain later, you'll need to configure SSL certificate here

